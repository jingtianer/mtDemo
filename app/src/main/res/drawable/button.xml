<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:drawable="@drawable/button_disable">
        <shape>
            <corners android:radius="10dp" />
            <color android:color="@color/gray" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="10dp" />
            <gradient android:startColor="@color/orange_secondary" android:endColor="@color/orange_secondary1"/>
        </shape>

    </item>
    <item>
        <shape>
            <corners android:radius="10dp" />
            <gradient android:startColor="@color/orange" android:endColor="@color/orange1"/>
        </shape>

    </item>
</selector>