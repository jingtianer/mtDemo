<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="@color/gray" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="10dp" />
            <gradient android:endColor="@color/orange_secondary1" android:startColor="@color/orange_secondary" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="10dp" />
            <gradient android:endColor="@color/orange1" android:startColor="@color/orange" />
        </shape>
    </item>
</selector>